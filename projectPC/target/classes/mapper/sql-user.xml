	<update id="updateUser">
		<![CDATA[
			UPDATE
				USERINFO 
			SET
				PWD=#{changePwd},
				USERNAME=#{username},
				NICKNAME=#{nickname},
				INSTA=NULL,
				EMAIL=#{email},
				PHONE=#{phone}
			WHERE
				USERID=#{userid} AND
				DELETE_YN='N'
		]]>
	</update>
	
	<update id="deleteUser">
		<![CDATA[
			UPDATE
				USERINFO
			SET
				DELETE_YN = 'Y'
			WHERE
				USERID = #{userid}
		]]>
	</update>
	
