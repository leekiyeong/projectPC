<mapper namespace="pc.mapper.UserMapper">

	<insert id="signup">
		<![CDATA[
			INSERT INTO USERINFO(
				ID, 
				PASSWORD,
				NAME,
				PHONE,
				RMTIME,
				USERABLE_YN, 
				USING_YN
			)
	        VALUES (
	            #{signupID},
	            #{signupPassword},
	            #{signupName},
	            #{signupPhone},
	            '0',
	            'Y',
	            'N'
	        )
		]]>
	</insert>
	
